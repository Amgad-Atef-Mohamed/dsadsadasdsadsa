{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "allowJs": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
  "include": [
    "./src/**/*"
  ]
}
